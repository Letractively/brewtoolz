<%#
# To change this template, choose Tools | Templates
# and open the template in the editor.
%>

<span id="<%=id_prefix%>_show" onclick="Element.show('<%=id_prefix%>_edit');Element.hide('<%=id_prefix%>_show');">
  <span class="input-hl" id="<%=id_prefix%>_s"><%= value_display_str %></span>
  <a onlcick="Element.show('<%=id_prefix%>_edit');Element.hide('<%=id_prefix%>_show');" class="ui-state-default ui-corner-all small-button">+</a>
</span>

<span id="<%=id_prefix%>_edit" style="display:none;" >
    <table>
		<tr>
			<td>
				<% form_remote_for( object,
					:loading => "Hobo.showSpinner('#{message}');",
					:complete => "Hobo.hideSpinner();Element.hide('#{id_prefix}_edit');Element.show('#{id_prefix}_show');",
					:url => url_for_edit ) do |f|%>

					<%= f.text_field field_name, :value => value_str, :size => 3, :id =>"#{id_prefix}_e" %>


					<%= submit_tag "Ok", :class => "ui-state-default ui-corner-all small-button", :id => "ok_#{id_prefix}" %>
					<button class="ui-state-default ui-corner-all small-button" onclick="Element.hide('<%=id_prefix%>_edit');Element.show('<%=id_prefix%>_show');return false">X</button>


			    <% end %>
			</td>
		</tr>
    </table>
</span>