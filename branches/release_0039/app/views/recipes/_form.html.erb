<%= error_messages_for :recipe %>
<% form_for @recipe do |f| -%>
  <p>
    Name: <%= f.text_field :name %>
  </p>
  <div id="fermentables">
    <%= render :partial => 'fermentable', :collection => @recipe.fermentables %>
  </div>
  <p>
    <%= add_fermentable_link "Add a fermentable" %>
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p>

<% end -%>
