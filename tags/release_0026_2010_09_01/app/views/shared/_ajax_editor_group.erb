<%#
# To change this template, choose Tools | Templates
# and open the template in the editor.
%>

<span id="<%=id_prefix%>_show" onclick="Element.show('<%=id_prefix%>_edit');Element.hide('<%=id_prefix%>_show');<%=element_groups(group)%>">
  <span class="input-hl"><%= value %></span>
  <% if alt_value %>
    (<%= alt_value %>)
  <% end %>
</span>

<span id="<%=id_prefix%>_edit" style="display:none;" >
  <table>
    <tr>
      <td>
        <% form_remote_tag(
          :loading => "Hobo.showSpinner('#{message}');",
          :complete => "Hobo.hideSpinner();",
          :url => url_for_edit ) do -%>
          <%= text_field_tag tag_field, value, :size => 3 %>
          <%= submit_tag "Ok", :class => "button small-button" %><button class="button small-button" onclick="Element.hide('<%=id_prefix%>_edit');Element.show('<%=id_prefix%>_show');return false">X</button>
        <% end -%></td>
      
    </tr>
  </table>


</span>
